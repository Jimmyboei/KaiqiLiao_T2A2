<h1>Messages</h1>
<div id="messages">
  <h3> my listing </h3>
  <% @recived_message_grouped.each do |key, messages| %>
    <% messages.each do |message| %>
      <%= render message %>
      <br />
    <% end %>
    <div>
      <a href="/messages/new?listing=<%= messages[0].listing_id %>&user=<%= messages[0].user_id %>"> Reply </a>
    </div>
  <% end %>
</div>
