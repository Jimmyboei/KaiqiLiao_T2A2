<div id="<%= dom_id listing %>">
  <p>
    <strong>Seller:</strong>
    <%= listing.user.email %>
  </p>
  <p>
    <strong>Name:</strong>
    <%= listing.name %>
  </p>
  <p>
    <strong>Price:</strong>
    <%= number_to_currency(listing.price) %>
  </p>
  <p>
    <strong>Category:</strong>
    <%= listing.category.name %>
  </p>
  <p>
    <strong>Condition:</strong>
    <%= listing.condition %>
  </p>
</div>
